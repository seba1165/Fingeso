<% flash.each do |key, value| %>
    <p> <%= value %> </p>
<% end %>
<body>
<div class="container">
  <h1 style="color:#0B2161"><FONT FACE="times new roman">AGREGAR ARTICULOS A LA COTIZACION <small> </small></FONT></h1>
  <hr>

</div>
<div class="container">
  <div class="row">
    <div class="panel panel-primary filterable">
      <div class="panel-heading" style="min-height:40px;">
        <h3 class="panel-title pull-left">Art√≠culos</h3>
        <div class="pull-right">
          <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
        </div>
      </div>
      <table class="table">
        <thead>
        <tr class="filters">
          <th></th>
          <th></th>
          <th><input type="text" class="form-control" placeholder="Nombre" disabled></th>
          <th><input type="text" class="form-control" placeholder="Tipo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Stock" disabled></th>
          <th><input type="text" class="form-control" placeholder="Precio" disabled></th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% @arts.each do |d| %>
            <tr>
              <td class="td-actions">
                <%= button_to "Agregar", addArt_path(d.art_cod), :method => :get %>
              </td>
              <td class="td-actions">
              </td>
              <td><%= d.art_nom %> </td>
              <td><%= d.tipo_articulo.tipo_nom %></td>
              <td><%= d.art_stock %> </td>
              <td><%= d.art_precio %> </td>

            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
</div>
<div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#5858FA;" onclick="location.href='/';"><span class="glyphicon glyphicon-arrow-left"></span> Volver </button>
    </div>
  </div>
  <hr>
</div>
</body>