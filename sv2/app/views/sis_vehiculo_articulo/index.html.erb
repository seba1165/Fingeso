<% flash.each do |key, value| %>
    <p> <%= value %> </p>
<% end %>
<body>
<div class="container">
  <h1 style="color:#0B2161"><FONT FACE="times new roman">ADMINISTRAR SERVICIOS DE INSTALACION<small>   Editar, eliminar y crear Servicios de Instalacion</small></FONT></h1>
  <hr>
  <div><button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#2DB171;" onclick="location.href='/sis_vehiculo_articulo/new';"><span class="glyphicon glyphicon-plus"></span> Crear Nuevo SI</button>
    <hr>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="panel panel-primary filterable">
      <div class="panel-heading" style="min-height:40px;">
        <h3 class="panel-title pull-left">Servicios de Instalacion</h3>
        <div class="pull-right">
          <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
        </div>
      </div>
      <table class="table table-filterable" >
        <thead>
        <tr class="filters">
          <th></th>
          <th></th>
          <th><input type="text" class="form-control" placeholder="ArtÃ­culo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Marca/Modelo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Costo Mano de Obra" disabled></th>
          <th><input type="text" class="form-control" placeholder="Costo Insumos" disabled></th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% @SIs.each do |d| %>
            <tr>
              <td class="td-actions">
                <%= button_to "Editar", edit_si_vehiculo_articulo_path(d), :method => :get %>
              </td>
              <td class="td-actions">
                <%= button_to "Borrar", elimSI_path(d), :method => :post %>
              </td>
              <td><%= ParaInstalacion.where(art_cod: d.art_cod).first.art_nom %> </td>
              <td><%= Marca.where(marca_cod: d.marca_cod).first.marca_nombre %> <%= Modelo.where(modelo_cod: d.modelo_cod).first.modelo_nombre %> <%= d.modelo_ano %></td>
              <td><%= d.s_v_a_mo_pr %> </td>
              <td><%= d.s_v_a_in_pr%> </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
</div>
<div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#5858FA;" onclick="location.href='/';"><span class="glyphicon glyphicon-arrow-left"></span> Volver </button>
    </div>
  </div>
  <hr>
</div>
</body>